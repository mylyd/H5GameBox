<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <com.mobo.funplay.gamebox.views.RoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="110dp"
        android:layout_height="73dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"
        android:src="@drawable/default_thumb" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center_vertical|start|left"
            android:maxLines="1"
            android:text="Spiral Stairs"
            android:textColor="#1C243B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:lines="3"
            android:gravity="center_vertical|start|left"
            android:text="Amaze is another drawing game with relaxing game play and agame with relaxing game play and a few few game with relaxing game play and a fewgame with relaxing game play and a few"
            android:textColor="#7F8593"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_like_selector"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingTop="2dp"/>

</LinearLayout>